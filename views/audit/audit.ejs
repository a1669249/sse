<!DOCTYPE html>
<html>
	<head>
		<title>SSE Voting System</title>
		<!-- Style Sheets -->
		<link rel='stylesheet' href='/libraries/bootstrap/css/bootstrap.min.css'>
		<link rel='stylesheet' href='/stylesheets/style.css'>
		<!-- Libraries -->
		<script src='/libraries/jquery.min.js'></script>
		<script src='/libraries/bootstrap/js/bootstrap.bundle.js'></script>
	</head>
	<body style="overflow-y: hidden;">
		<div class="container-fluid">
			<div id="header" class="row mb-4">
				<div class="col">
					<img src="/images/aec-logo-homepage.png">
				</div>
				<div class="text-center m-auto">
				</div>
				<div class="col text-right m-auto">
					<a class="btn btn-light" href="/logout">Log Out</a>
				</div>
			</div>
			<div id="content">
				<div class="row mb-3">
					<div class="col">
						<a href="/" class="btn btn-purple ">&larr;Back</a>
					</div>
					<div class="col text-center">
						<h1>System Audit</h1>
					</div>
					<div class="col"></div>
				</div>
				<div class="row">
					<div class="col">
						<ul class="list-group mx-auto" style="width: 40%;">
							<% events.reverse().forEach(function(event){ %>
								<li class="list-group-item log-list">
									<div>
										Time: <%= event.timestamp %>
									</div>
									<div>
										User: <%= event.user %>
									</div>
									<div>
										Action: <%= event.action %>
									</div>
									<% if(event.from){ %>
										<div>
											From: <%= JSON.stringify(event.from) %>
										</div>
										<div>
											To: <%= JSON.stringify(event.to) %>
										</div>
									<% } %>
								</li>
							<% }); %>
						</div>
					</div>
				</div>
			</div>
			<div id="footer" class="row"></div>
		</div>
	</body>
</html>