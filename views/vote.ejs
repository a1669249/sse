<!DOCTYPE html>
<html>
	<head>
		<title>SSE Voting System</title>
		<!-- Style Sheets -->
		<link rel='stylesheet' href='/stylesheets/style.css'>
		<link rel='stylesheet' href='/libraries/bootstrap/css/bootstrap.min.css'>
		<!-- Libraries -->
		<script src='/libraries/jquery.min.js'></script>
		<script src='/libraries/bootstrap/js/bootstrap.bundle.js'></script>
	</head>
	<body>
		<div class="container-fluid">
			<div id="header" class="row">
				<div class="col">
					<img src="/images/aec-logo-homepage.png">
				</div>
				<div class="text-center m-auto">
				</div>
				<div class="col text-right m-auto">
					<a class="btn btn-dark" href="/logout">Log out</a>
				</div>
			</div>
			<div id="content" class="row">
				<% if(ballot){ %>
					<div class="row m-auto">
						<h1><%= ballot.electorate %></h1>
					</div>
					<div id="aboveLine" class="row m-auto">
						<% ballot.above.forEach(function(party){ %>
							<div>party</div>
						<% }); %>
					</div>
					<div id="belowLine" class="row m-auto">
						
					</div>
				<% }else{ %>
					<div class="bg-danger">
						Couldn't retrieve ballot!
					</div>
				<% } %>
			</div>
			<div id="footer" class="row">
			</div>
		</div>
	</body>
	<script src='/javascript/vote.js'></script>
</html>